<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hibernate.annotation.entity.StudentEntity" table="STUDENT">
        <meta attribute="class-description">This class contains student details.</meta>
        <id name="id" type="long" column="STUDENT_ID">
            <generator class="native" />
        </id>
        <property name="name" type="string" length="100" not-null="true" column="STUDENT_NAME" />

        <property name="email" type="string" length="100" not-null="true" column="EMAIL" />

    </class>
</hibernate-mapping>
